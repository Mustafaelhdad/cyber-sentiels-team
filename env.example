# ===================
# DATABASE (MySQL)
# ===================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=sentinel
DB_USERNAME=sentinel
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret

# ===================
# REDIS
# ===================
REDIS_HOST=redis
REDIS_PORT=6379

# ===================
# APP
# ===================
APP_ENV=production
APP_DEBUG=true
APP_URL=http://72.62.93.170

# ===================
# FRONTEND
# ===================
VITE_API_URL=http://72.62.93.170/api

# ===================
# ZAP (DAST)
# ===================
ZAP_API_URL=http://zap:8080
ZAP_SPIDER_MAX_DEPTH=3
ZAP_SPIDER_MAX_CHILDREN=150
ZAP_SPIDER_THREAD_COUNT=2
ZAP_SPIDER_TIMEOUT_SECONDS=300
ZAP_ASCAN_THREAD_PER_HOST=2
ZAP_ASCAN_DELAY_MS=200
ZAP_ASCAN_MAX_DURATION_MINUTES=25
ZAP_ACTIVE_SCAN_TIMEOUT_SECONDS=1500
ZAP_JOB_TIMEOUT_SECONDS=2400

# ===================
# SAST
# ===================
SAST_API_URL=http://sast:8080

# ===================
# RASP (Runtime Application Self-Protection)
# ===================
# Legacy external RASP service (deprecated)
RASP_API_URL=http://rasp:9000
RASP_ENABLE_DEMO=false

# In-app RASP configuration
RASP_ENABLED=false
RASP_MODE=monitor
# Sinks to instrument
RASP_SINK_DATABASE=true
RASP_SINK_HTTP=true
RASP_SINK_FILESYSTEM=true
# Rate limits
RASP_RATE_LIMIT_RPM=120
RASP_RATE_LIMIT_AUTH_FAILURES=5
RASP_RATE_LIMIT_ERRORS=30
# Queue configuration
RASP_QUEUE_CONNECTION=redis
RASP_QUEUE_NAME=rasp
RASP_QUEUE_SYNC=false
# Logging
RASP_LOG_CHANNEL=rasp
RASP_LOG_LEVEL=info
# Retention
RASP_RETENTION_DAYS=30
# Redaction
RASP_MAX_BODY_SIZE=4096

# ===================
# SIEM (Security Information & Event Management)
# ===================
SIEM_API_URL=http://siem:5000
SIEM_WORKERS=2
SIEM_TIMEOUT=120
SIEM_SECRET_KEY=change-this-in-production
# TIP (Threat Intelligence Platform) model integration
SIEM_TIP_ENABLED=false
SIEM_REALTIME_POLL_INTERVAL=0.5

# ===================
# WAF (ModSecurity + OWASP CRS)
# ===================
# DetectionOnly = log only, On = enforce blocking
WAF_MODE=DetectionOnly
# Paranoia level 1-4 (1=minimal false positives, 4=max protection)
WAF_PARANOIA=1
# Base URL for generated WAF proxy URLs (defaults to APP_URL if not set)
WAF_BASE_URL=http://72.62.93.170

